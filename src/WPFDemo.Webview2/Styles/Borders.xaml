<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Border" x:Key="b1">
        <Setter Property="Background" Value="Transparent" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding ElementName=Control,Path=IsActive}" Value="True" >
                <Setter Property="CornerRadius" Value="7,7,0,0" />
                <Setter Property="Background" Value="#f6e58d" />
            </DataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions >
                    <Condition Binding="{Binding ElementName=Control,Path=IsActive}" Value="False" />
                    <Condition Binding="{Binding ElementName=Control,Path=IsMouseOver}" Value="True" />
                </MultiDataTrigger.Conditions>
                <Setter Property="CornerRadius" Value="4" />
                <Setter Property="Background" Value="#f6e58d" />
            </MultiDataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Border" x:Key="b2">
        <Setter Property="Background" Value="Transparent" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#ffffff" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>