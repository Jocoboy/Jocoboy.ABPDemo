<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="DockPanel" x:Key="dp1">
        <Setter Property="Background" Value="Transparent" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding ElementName=Control,Path=IsActive}" Value="True" >
                <Setter Property="Background" Value="#535c68" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>